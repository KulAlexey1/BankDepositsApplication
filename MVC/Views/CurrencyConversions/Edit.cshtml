@model BDA.Domain.CurrencyConversion

@{
    ViewData["Title"] = "Изменение";
}

<h1>Изменение</h1>

<h4>Конвертация валют</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <<div class="form-group">
                <label asp-for="Currency" class="control-label"></label>
                <select asp-for="Currency" class="form-control" asp-items="(IEnumerable<SelectListItem>)ViewBag.Currencies"></select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Buy" class="control-label"></label>
                <input asp-for="Buy" class="form-control" />
                <span asp-validation-for="Buy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountInNativeCurrencyPerUnit" class="control-label"></label>
                <input asp-for="AmountInNativeCurrencyPerUnit" class="form-control" />
                <span asp-validation-for="AmountInNativeCurrencyPerUnit" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="Currency" asp-items="(IEnumerable<SelectListItem>)ViewBag.Currencies"/>
            <input type="hidden" asp-for="Buy" />
            <input type="hidden" asp-for="AmountInNativeCurrencyPerUnit" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

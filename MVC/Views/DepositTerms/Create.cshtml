@model BDA.Domain.DepositTerm

@{
    ViewData["Title"] = "Добавление";
}

<h1>Добавить</h1>

<h4>DepositTerm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DaysAmount" class="control-label"></label>
                <input asp-for="DaysAmount" class="form-control" />
                <span asp-validation-for="DaysAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonthsAmount" class="control-label"></label>
                <input asp-for="MonthsAmount" class="form-control" />
                <span asp-validation-for="MonthsAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearsAmount" class="control-label"></label>
                <input asp-for="YearsAmount" class="form-control" />
                <span asp-validation-for="YearsAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

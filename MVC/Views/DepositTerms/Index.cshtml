@model IEnumerable<BDA.Domain.DepositTerm>

@{
    ViewData["Title"] = "Список";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DaysAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthsAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearsAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DaysAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonthsAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearsAmount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
